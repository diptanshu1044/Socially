# Next.js App Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# Site URLs
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SOCKET_URL="http://localhost:8080"

# Clerk Authentication
CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"

# UploadThing Configuration
UPLOADTHING_SECRET="sk_live_your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Environment
NODE_ENV="development"

# Optional: Network Configuration (for local development)
# NEXT_PUBLIC_NETWORK_IP="192.168.1.100"

# Optional: Database Connection Pool (for performance tuning)
# DATABASE_CONNECTION_LIMIT=10
# DATABASE_POOL_TIMEOUT=20

# Optional: Logging
# LOG_LEVEL="info" # debug, info, warn, error
# ENABLE_DEBUG_LOGS=true

# Optional: Security
# JWT_SECRET="your-jwt-secret-if-using-custom-auth"
# SESSION_SECRET="your-session-secret"

# Optional: Monitoring
# ENABLE_HEALTH_CHECK=true
# HEALTH_CHECK_PATH="/health" 