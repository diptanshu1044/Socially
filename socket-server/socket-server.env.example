# Socket Server Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# Frontend URL
FRONTEND_URL="https://your-app.vercel.app"

# Environment
NODE_ENV="production"

# Port Configuration
PORT=8080
SOCKET_PORT=8080

# CORS Origins (optional - will be auto-detected from FRONTEND_URL)
# Add additional origins if needed:
# NEXT_PUBLIC_SITE_URL="https://your-app.vercel.app"
# VERCEL_URL="your-app.vercel.app"

# Database Connection Pool (optional - for performance tuning)
# DATABASE_CONNECTION_LIMIT=10
# DATABASE_POOL_TIMEOUT=20

# Logging (optional)
# LOG_LEVEL="info" # debug, info, warn, error
# ENABLE_DEBUG_LOGS=true

# Security (optional)
# JWT_SECRET="your-jwt-secret-if-using-custom-auth"
# SESSION_SECRET="your-session-secret"

# Monitoring (optional)
# ENABLE_HEALTH_CHECK=true
# HEALTH_CHECK_PATH="/health" 